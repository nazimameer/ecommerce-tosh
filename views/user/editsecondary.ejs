<!doctype html>
<html lang="en">
<%- include('../partials/userheader.ejs') %>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Bootstrap demo</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link rel="stylesheet" href="/usercss/address.css">
</head>

<body style="background: #000000 ;">
    
<div class="container mt-5">

<div class="row mt-3 mx-3" style="margin-top:25px ;">
    <div class="col-md-3">
      <div style="margin-top: 50px; margin-left: 10px;" class="text-center">
        <i id="animationDemo" data-mdb-animation="slide-right" data-mdb-toggle="animation"
          data-mdb-animation-reset="true" data-mdb-animation-start="onScroll"
          data-mdb-animation-on-scroll="repeat" class="fas fa-3x fa-shipping-fast text-white"></i>
        <h3 class="mt-3 text-white">Welcome</h3>
        <p class="white-text">Check once the entered address was correct !...</p>
      </div>
      <div class="text-center">
        <a href="/cart/checkout"><button type="submit" class="btn btn-outline-light btn-rounded back-button">Go back</button></a>
      </div>
  
  
    </div>
    <div class="col-md-9 justify-content-center">
      <div class="card card-custom pb-4">
        <div class="card-body mt-0 mx-5">
          <div class="text-center mb-3 pb-2 mt-3">
            <h4 style="color: #000025 ;">Delivery Details</h4>
          </div>

              <form class="mb-0" action="/editsecondary" method="post" onsubmit="return secondaryAddvali(this)">
                <div class="row mb-4">
                  <div class="col">
                    <div class="form-outline">
                      <input type="text" id="username" class="form-control input-custom" name="username" placeholder="Real Name" value="<%=address.secondaryAddress.username%>"/>
                      <p id="userNameError"></p>
                    </div>
                  </div>
                  <div class="col">
                    <div class="form-outline">
                      <input type="number" id="mobile" class="form-control input-custom" name="mobile" placeholder="Mobile"  value="<%=address.secondaryAddress.mobile%>"/>
                      <p id="mobileError"></p>
                    </div>
                  </div>
                </div>
    
                <div class="row mb-4">
                  <div class="col">
                    <div class="form-outline">
                      <input type="email" id="email" class="form-control input-custom" name="email" placeholder="Email" value="<%=address.secondaryAddress.email%>"/>
                      <p id="emailError"></p>
                    </div>
                  </div>
    
                  <div class="col">
                    <div class="form-outline">
                      <input type="number" id="zip" class="form-control input-custom" name="postcode" placeholder="Zip" value="<%=address.secondaryAddress.postcode%>"/>
                      <p id="zipError"></p>
                    </div>
                  </div>
                </div>
    
                 <div class="row mb-4">
                    <div class="col">
                      <div class="form-outline">
                        <input  type="text" id="area" class="form-control input-custom" name="area" placeholder="Area" value="<%=address.secondaryAddress.area%>"/>
                        <p id="areaError"></p>
                      </div>
                    </div>
    
                    <div class="col">
                      <div class="form-outline">
                        <input type="text" id="district" class="form-control input-custom" name="district" placeholder="District" value="<%=address.secondaryAddress.district%>"/>
                        <p id="districtError"></p>
                      </div>
                    </div>
                  </div>
    
                  <div class="row mb-4">
                    <div class="col">
                      <div class="form-outline">
                        <input type="text" id="state"  class="form-control input-custom" name="state" placeholder="State" value="<%=address.secondaryAddress.state%>"/>
                        <p id="stateError"></p>
                    </div>
                    </div>
                    <div class="col">
                      <div class="form-outline">
                        <input type="text" id="landmark"  class="form-control input-custom" name="landmark" placeholder="Land mark"  value="<%=address.secondaryAddress.landmark%>"/>
                        <p id="landmarkError"></p>
                      </div>
                    </div>
                  </div>
    
                <div class="float-end ">
              <!-- Submit button -->
              <button type="submit" class="btn btn-primary btn-rounded"
                style="background-color: #000025;">Edit</button>
            </div>

          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="/js/primaryaddvalidation.js"></script>
  
<%- include('../partials/bootstrapF.ejs') %>