<body style="background: #000000">
  <%- include('../partials/userheader.ejs') %>


    <section class="vh-100 gradient-custom">
        <div style="width:100%; height:100vh;" class="d-flex">
            <div class="left ms-auto d-flex justify-content-center align-items-center" style="width:50%; height:100vh;">
                <img src="/ProductImg/<%=zproduct._id %>.jpg" style="width: 40%;">
            </div>
            <div class="right me-auto" style="width:50%; height:100vh;">
                    <div style="margin-top:20%;">
                <h1 class="text-light"><%=zproduct.name %></h1>
                <p class="text-light" style="width: 80%;">Aren't some of the best memories the ones made out of impulsivity? Not only will get to rock this simple, comfortable, and low profile short sleeve shirt but you'll have a physical reminder to look back on. If you know, you know.</p>
                <p class="text-light" style="font-size: 200%;">RS: <%=zproduct.price %> /-</p>
                <button  onclick="addtocart('<%=zproduct._id %>')" class="btn btn-outline-primary">Add to cart</button>
                <%if(wishlist==null){%> 
                    <button onclick="addtowishlist('<%=zproduct._id %>')" style="border: none; background: none;"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" style="fill: rgb(255, 255, 255);transform: ;msFilter:;"><path d="M12 4.595a5.904 5.904 0 0 0-3.996-1.558 5.942 5.942 0 0 0-4.213 1.758c-2.353 2.363-2.352 6.059.002 8.412l7.332 7.332c.17.299.498.492.875.492a.99.99 0 0 0 .792-.409l7.415-7.415c2.354-2.354 2.354-6.049-.002-8.416a5.938 5.938 0 0 0-4.209-1.754A5.906 5.906 0 0 0 12 4.595zm6.791 1.61c1.563 1.571 1.564 4.025.002 5.588L12 18.586l-6.793-6.793c-1.562-1.563-1.561-4.017-.002-5.584.76-.756 1.754-1.172 2.799-1.172s2.035.416 2.789 1.17l.5.5a.999.999 0 0 0 1.414 0l.5-.5c1.512-1.509 4.074-1.505 5.584-.002z"></path></svg></button>
                    <%}else{%>
                     <span style="margin-left: 2%;"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" style="fill: rgb(255, 255, 255);transform: ;msFilter:;"><path d="M20.205 4.791a5.938 5.938 0 0 0-4.209-1.754A5.906 5.906 0 0 0 12 4.595a5.904 5.904 0 0 0-3.996-1.558 5.942 5.942 0 0 0-4.213 1.758c-2.353 2.363-2.352 6.059.002 8.412L12 21.414l8.207-8.207c2.354-2.353 2.355-6.049-.002-8.416z"></path></svg></span>
                        <%}%> 
            </div>
            </div>
        </div>
    </section>

    <script>
        function addtocart(productId){
            $.ajax({
                url:'/addToCart',
                data:{
                    product: productId,
                },
                method:'post',
                success:(response)=>{
                    if(response.status){
                        let count = $('#cart-count').html()
                        count = parseInt(count)+1
                        $('#cart-count').html(count)
                    }
                },
            })
        }
        function addtowishlist(productId){
            $.ajax({
                url:'/addtowishlist',
                data:{
                    product:productId,
                },
                method:'post',
                success:(response)=>{
                    if(response.success){
                        Swal.fire({
                    position: 'top-end',
                    icon: 'success',
                    title: 'Product Added to Wishlist Successfully!',
                    showConfirmButton: false,
                    timer: 1500
                    }).then(()=>{
                        location.reload()
                    })
                    }else{
                        Swal.fire({
                    position: 'top-end',
                    icon: 'error',
                    title: 'Oops...!',
                    text: 'Product Already in Wishlist!',
                    showConfirmButton: false,
                    timer: 1500
                    }).then(()=>{
                        location.reload()
                    })
                    }
                }
            })
        }
    </script>
